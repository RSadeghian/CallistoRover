<?xml version='1.0'?>

<robot name="callisto" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find callisto_description)/urdf/callisto.gazebo" />
  <xacro:include filename="$(find callisto_description)/urdf/materials.xacro" />
  <xacro:include filename="$(find callisto_description)/urdf/macros.xacro" />

  <xacro:property name="cameraSize" value="0.05"/>
  <xacro:property name="cameraMass" value="0.1"/>
  <xacro:property name="wheelDistanceX" value="0.03"/>
  <xacro:property name="wheelDistanceY" value="0.0"/>
  <xacro:property name="wheelDistanceZ" value="0.0375"/>

<!-- Robot Chassis -->
  <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="10.0"/>
      <origin xyz="0.0 0 0.1" rpy=" 0 0 0"/>
      <inertia
          ixx="0.5" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <geometry>
        <box size=".4 .2 .1"/> 
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <mesh filename="package://callisto_description/meshes/chassis.stl" scale="0.9 0.9 0.8"/>
      </geometry>
    </visual>
    </link>

<!-- Chassis Top -->
  <link name='chassis_top'>
    <pose>0 0 0.035 0 0 0</pose>
    <visual name='chassis_top_visual'>
      <origin xyz="0 0 0.035" rpy=" 0 0 0"/>
      <geometry>
        <mesh filename="package://callisto_description/meshes/top.stl" scale="0.8 0.8 0.8"/>
      </geometry>
    <material name="blue"/>
    </visual>
    </link>

  <joint name="chassis_top_joint" type="fixed">
    <origin xyz="0 0 0.035" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="chassis_top"/>
  </joint>

<!-- Left Wheel -->
  <link name="fleft_wheel">
    <!--origin xyz="-0.1 0.13 -0.05" rpy="0 1.5707 1.5707"/-->
    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
    </collision>
    <visual name="fleft_wheel_visual">
      <origin xyz="${wheelDistanceX} ${wheelDistanceY} ${wheelDistanceZ}" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://callisto_description/meshes/wheel.stl" scale="0.6 0.6 0.6"/>
      </geometry>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <mass value="5"/>
      <cylinder_inertia m="5" r="0.03" h="0.02"/>
      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
    </inertial>
  </link>


  <link name="fright_wheel">
    <!--origin xyz="-0.1 -0.13 -.05" rpy="0 1.5707 1.5707"/-->
    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
    </collision>
    <visual name="fright_wheel_visual">
      <origin xyz="${wheelDistanceX} ${wheelDistanceY} ${wheelDistanceZ}" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://callisto_description/meshes/wheel.stl" scale="0.6 0.6 0.6"/>
      </geometry>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <mass value="5"/>
      <cylinder_inertia m="5" r="0.03" h="0.02"/>
      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
    </inertial>
  </link>


  <joint type="continuous" name="fleft_wheel_hinge">
    <origin xyz="-0.1 0.15 -0.05" rpy="0 0 0"/>
    <child link="fleft_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>


  <joint type="continuous" name="fright_wheel_hinge">
    <origin xyz="-0.1 -0.15 -0.05" rpy="0 0 0"/>
    <child link="fright_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>


  <link name="left_wheel">
    <!--origin xyz="0.1 0.13 -.05" rpy="0 1.5707 1.5707"/-->
    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
    </collision>
    <visual name="left_wheel_visual">
      <origin xyz="${wheelDistanceX} ${wheelDistanceY} ${wheelDistanceZ}" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://callisto_description/meshes/wheel.stl" scale="0.6 0.6 0.6"/>
      </geometry>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <mass value="5"/>
      <cylinder_inertia m="5" r="0.03" h="0.02"/>
      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
    </inertial>
  </link>


  <link name="right_wheel">
    <!--origin xyz="0.1 -0.13 -.05" rpy="0 1.5707 1.5707"/-->
    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
    </collision>
    <visual name="right_wheel_visual">
      <origin xyz="${wheelDistanceX} ${wheelDistanceY} ${wheelDistanceZ}" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://callisto_description/meshes/wheel.stl" scale="0.6 0.6 0.6"/>
      </geometry>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <mass value="5"/>
      <cylinder_inertia m="5" r="0.03" h="0.02"/>
      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
    </inertial>
  </link>


  <joint type="continuous" name="left_wheel_hinge">
    <origin xyz="0.1 0.15 -.05" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>


  <joint type="continuous" name="right_wheel_hinge">
    <origin xyz="0.1 -0.15 -.05" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>

 <link name="camera">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${cameraSize} ${cameraSize} ${cameraSize}"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${cameraSize} ${cameraSize} ${cameraSize}"/>
      </geometry>
      <material name="green"/>
    </visual>

    <inertial>
      <mass value="${cameraMass}" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <box_inertia m="${cameraMass}" x="${cameraSize}" y="${cameraSize}" z="${cameraSize}" />
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

  <joint name="camera_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz=".2 0 0" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="camera"/>
  </joint>


  <joint name="hokuyo_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz=".15 0 .1" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="hokuyo"/>
  </joint>

  <!-- Hokuyo Laser -->
  <link name="hokuyo">
    <collision>
      <origin xyz="0 0 -0.02" rpy="0 0 0"/>
      <geometry>
    <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 -0.02" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://callisto_description/meshes/hokuyo.dae"/>
      </geometry>
    </visual>

    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

  <joint name="imu_joint" type="fixed">
    <axis xyz="1 0 0"/> <!-- 0 1 0 -->
    <origin xyz="0 0 0.19"/>
    <parent link="chassis"/>
    <child link="imu_link"/>
  </joint>


<link name="imu_link">
  <inertial>
    <mass value="0.001"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.000001" iyz="0" izz="0.0001"/>
  </inertial>
  <visual>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <geometry>
      <box size="0.001 0.001 0.001"/>
    </geometry>
  </visual>
  <collision>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <geometry>
      <box size=".001 .001 .001"/>
    </geometry>
  </collision>
</link>


</robot>